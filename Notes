Amazon S3 Fuse:

apt-get install -y build-essential libfuse-dev libcurl4-openssl-dev libxml2-dev mime-support automake
wget https://github.com/s3fs-fuse/s3fs-fuse/archive/master.zip
unzip master.zip
rm -f master.zip
cd s3fs-fuse-master
./autogen.sh
./configure
make
make install





#CHROOT JAIL:  http://www.58bits.com/blog/2014/01/09/ssh-and-sftp-chroot-jail

#Create our directories
sudo mkdir -p /home/jail/{dev,etc,lib,lib64,usr,bin,home}
sudo mkdir -p /home/jail/usr/bin
 
#Set owner
sudo chown root:root /home/jail
 
#Needed for the OpenSSH ChrootDirectory directive to work
sudo chmod go-w /home/jail

wget --output-document=l2chroot.sh http://www.cyberciti.biz/files/lighttpd/l2chroot.txt
chmod +x l2chroot.sh

#First the binaries
cd /home/jail/bin
sudo cp /bin/bash .
sudo cp /bin/ls .
sudo cp /bin/cp .
sudo cp /bin/mv .
sudo cp /bin/mkdir .
 
#Now our l2chroot script to bring over dependencies
sudo /data/l2chroot.sh /bin/bash
sudo /data/l2chroot.sh /bin/ls
sudo /data/l2chroot.sh /bin/cp
sudo /data/l2chroot.sh /bin/mv
sudo /data/l2chroot.sh /bin/mkdir

# clear command
cd /home/jail/usr/bin
sudo cp /usr/bin/clear .
sudo /data/l2chroot.sh /usr/bin/clear
#Add terminal info files - so that clear, and other terminal aware commands will work.
cd /home/jail/lib
sudo cp -r /lib/terminfo .

groupadd jail
adduser --disabled-password --gecos "" --home /home/jail/home/username username
echo 'username:acoman' | chpasswd
username:x:1001:1002::/home/jail/home/username:/bin/bash
sed -i 's/\/home\/jail\/home\/username:\/bin\/bash/\/home\/home\/username:\/bin\/bash/g' /etc/passwd
addgroup username jail
sed -i 's/X11Forwarding yes/X11Forwarding no/g' /etc/passwd
sudo /etc/init.d/ssh restart

.....




